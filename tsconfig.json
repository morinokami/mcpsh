{
	"compilerOptions": {
		"outDir": "dist",
		"module": "node16",
		"target": "ESNext",
		"moduleResolution": "node16",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"lib": ["ES2022"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
