{
	"name": "mcpsh",
	"description": "A minimal CLI client for the Model Context Protocol",
	"version": "0.1.0",
	"author": "Shinya Fujino <shf0811@gmail.com> (https://github.com/morinokami)",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/morinokami/mcpsh.git"
	},
	"bugs": "https://github.com/morinokami/mcpsh/issues",
	"keywords": [
		"modelcontextprotocol",
		"mcp"
	],
	"packageManager": "pnpm@10.7.0",
	"bin": "./dist/index.js",
	"engines": {
		"node": ">=22.8.0"
	},
	"scripts": {
