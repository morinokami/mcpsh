		"publint": "publint",
		"knip": "knip"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "1.8.0",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "beta",
		"@changesets/changelog-github": "0.5.1",
		"@changesets/cli": "2.28.1",
		"@types/node": "22.13.16",
		"knip": "5.46.3",
		"pkg-pr-new": "0.0.42",
		"publint": "0.3.9",
		"tsx": "4.19.3",
		"typescript": "5.8.2"
	}
}
